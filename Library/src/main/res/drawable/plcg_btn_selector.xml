            <corners android:radius="@dimen/plcg_dp_4" />
            <solid android:color="@color/plcg_colorPress" />
            <padding android:bottom="@dimen/plcg_dp_4" android:left="@dimen/plcg_dp_8" android:right="@dimen/plcg_dp_8" android:top="@dimen/plcg_dp_4" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/plcg_dp_4" />
            <solid android:color="@color/plcg_colorPress" />
