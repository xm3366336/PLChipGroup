<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="PLChipGroup">

        <!-- 以下是官方的，原封不动 -->
        <!-- 横向间距 -->
        <attr name="chipSpacingHorizontal" format="dimension" />
        <!-- 竖向间距 -->
        <attr name="chipSpacingVertical" format="dimension" />
        <!-- 是否单行模式，默认false。如果设置为true，则包在HorizontalScrollView里面 -->
        <attr name="singleLine" format="boolean" />
        <!-- 单选模式，默认false -->
        <attr name="singleSelection" format="boolean" />
        <!-- 不允许取消，默认false -->
        <attr name="selectionRequired" format="boolean" />

        <!-- 以下自定义的 -->
        <!-- 最多显示多少条，默认0，小于=0时，不限制。如果超过xx条，则显示：收缩和展开 -->
        <attr name="plcg_maxCount" format="integer" />

        <!-- chip的高度，默认24dip -->
        <attr name="plcg_height" format="dimension" />

        <!-- chip的文字大小 -->
        <attr name="plcg_textSize" format="dimension" />

        <!-- 选中状态下的边框颜色 -->
        <attr name="plcg_color_stroke" format="color" />
        <!-- 未选中状态下的边框颜色 -->
        <attr name="plcg_color_stroke_un" format="color" />
        <!-- 选中状态下的文字颜色 -->
        <attr name="plcg_color_text" format="color" />
        <!-- 未选中状态下的文字颜色 -->
        <attr name="plcg_color_text_un" format="color" />
        <!-- 选中后的背景颜色 -->
        <attr name="plcg_color_bg" format="color" />
        <!-- 未选中状态的背景颜色   -->
        <attr name="plcg_color_bg_un" format="color" />

    </declare-styleable>

</resources>